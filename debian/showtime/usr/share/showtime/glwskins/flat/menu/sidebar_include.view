#define SIDEBAR_BUTTON(ICON, EVENT, ENABLED) {
  widget(container_z, {
    height: 2em;
    width: 2em;
    onEvent(activate, EVENT);
    focusable: ENABLED;

    GridItemHighlight2();

    widget(icon, {
      source: ICON;
      style: "ListItemIcon";
      alpha: 0.7 * iir(ENABLED, 8) + 0.3;
    });
  });
}

#define SIDEBAR_BUTTON_TOGGLE(ICON, VALUE, ENABLED) {
  widget(container_z, {
    height: 2em;
    width: 2em;
    onEvent(activate, {
      toggle(VALUE);
    });

    focusable: ENABLED;

    GridItemHighlight2();

    widget(icon, {
      source: ICON;
      size: 1.5em;
      color: select(VALUE, 1, 0);
      alpha: 0.7 * iir(ENABLED, 8) + 0.3;
    });
  });
}


#define SIDEBAR_ACTION(CAPTION, ICON, EVENT, HIDDEN=false) {
  widget(container_z, {
    hidden: HIDDEN;
    height: 2em;
    ListItemBevel();
    ListItemHighlight();
    focusable: true;
    onEvent(activate, EVENT);

    widget(container_x, {
      style: "ListItem";

      widget(icon, {
        style: "ListItemIcon";
        source: ICON;
      });

      widget(label, {
        filterConstraintX: true;
        caption: CAPTION;
        style: "ActionLabel";
      });
    });
  });
}

#define SIDEBAR_INTEGER(CAPTION, ICON, MIN, MAX, STEP, VALUE, UNIT, HIDDEN=false) {
  widget(container_z, {
    hidden: HIDDEN;

    height: 3em;

    ListItemBevel();

    widget(container_y, {
      align: center;
      widget(container_x, {
        style: "ListItem";
        widget(icon, {
          style: "ListItemIcon";
          source: ICON;
        });

        widget(label, {
          caption: CAPTION + ":";
          style: ["ListItemLabel", "ListItemLabelContainer"];
        });

        widget(label, {
          style: "ListItemValue";
          caption: fmt("%d %s", VALUE, UNIT);
        });
      });

      widget(container_z, {
        ListItemHighlight();
        height: 1em;

        widget(container_x, {
          padding: [1em, 0];

          widget(container_z, {
            widget(container_y, {
              align: center;
              widget(quad, {
                height: 1;
                color: 0;
                alpha: 0.3;
              });
              widget(quad, {
                height: 1;
                alpha: 0.3;
              });
            });

            widget(slider_x, {
              alwaysGrabKnob: true;
              focusable: true;
              min: MIN;
              max: MAX;
              step: STEP;
              bind(VALUE);

              widget(container_y, {
                align: center;
                widget(quad, {
                  height: 0.5em;
                });
              });
            });
          });
        });
      });
    });
  });

}
